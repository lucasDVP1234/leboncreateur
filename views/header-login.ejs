<head>
    <!-- Include Montserrat Font and Tailwind CSS -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/tailwind.css">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link href="https://assets.calendly.com/assets/external/widget.css" rel="stylesheet">
                            
    <style>
      body {
        font-family: 'Montserrat', sans-serif;
      }
    </style>
  </head>
  <body>
    <div
    id="particles-js"
    class="fixed inset-0 -z-10 pointer-events-none"
    ></div>

   
    <header class="top-0 z-50 relative">
      
      
      <!-- Centered Logo & Subtitle -->
      <div class="container mx-auto px-8 py-5 flex flex-col items-center">
        <!-- Logo -->
        <a href="/">
          <img
            src="/images/leboncreateur2.png"
            alt="Company Logo"
            class="h-14 w-auto mx-auto transform hover:scale-105 hover:rotate-1"
          />
        </a>
        <img
        src="/images/prixunique2.png"
        alt="Sous-titre"
        class="mt-4 h-20 w-auto mx-auto "
      />
      </div>
    
      <!-- Desktop Navigation in top-right corner -->
      <nav class="hidden md:flex space-x-8 mt-6 absolute top-2 right-8">
        <a href="/signup-createur" class="flex transform shadow-[0_0_5px_rgba(0,0,0,0.3)] hover:scale-105 hover:rotate-1 items-center px-4 py-2 text-sm font-medium rounded-lg transition duration-200
        <% if (currentUrl === '/login') { %>
          bg-white text-black ring-2 ring-orange-500
        <% } else { %>
          text-black bg-white hover:ring-2 hover:ring-orange-500
        <% } %>">
          
          Ajouter votre profil
        <span 
          class="absolute top-1 right-1 transform translate-x-1/2 -translate-y-1/2 inline-flex w-4 h-4 bg-orange-400 border-2 border-white rounded-full">
        </span>
        </a>
        <a href="/login" class="flex transform shadow-[0_0_10px_rgba(0,0,0,0.3)] hover:scale-105 hover:rotate-1 items-center px-4 py-2 text-sm font-medium rounded-lg transition duration-200 
        <% if (currentUrl === '/favoris') { %>
          bg-white text-black ring-2 ring-orange-500
        <% } else { %>
          text-black bg-white hover:ring-2 hover:ring-orange-500
        <% } %>">
          <img src="/images/12.png" alt="Créer une campagne" class="w-6 h-6 mr-1">
          
        </a>
        <a href="/login" class="flex items-center shadow-[0_0_5px_rgba(0,0,0,0.3)] transform hover:scale-105 hover:rotate-1 px-4 py-2 text-sm font-medium rounded-lg transition duration-200
        <% if (currentUrl === '/account') { %>
          bg-white text-black ring-2 ring-orange-500
        <% } else { %>
          text-black bg-white hover:ring-2 hover:ring-orange-500
        <% } %>">
          <img src="/images/11.png" alt="Mon compte" class="w-6 h-6">
        </a>
        <a href="/logout" class="flex items-center transform hover:scale-105 hover:rotate-3 px-4 py-2 text-sm font-medium rounded-lg transition duration-200 shadow-[0_0_5px_rgba(0,0,0,0.3)] text-blue-950 bg-white hover:ring-2 hover:ring-orange-500">
          <img src="/images/10.png" alt="Déconnexion" class="w-6 h-6">
      </a>
      </nav>
    
      <!-- Mobile Menu Button (also in top-right) -->
      <div class="md:hidden absolute top-5 right-8">
        <button id="mobile-menu-button" class="text-gray-700 hover:text-orange-500 focus:outline-none">
          <!-- Menu Icon -->
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    
      <!-- Mobile Menu -->
      <nav id="mobile-menu" class="md:hidden hidden bg-white shadow-sm">
        <div class="px-4 pt-4 pb-3 space-y-1">
          <!-- Mobile links here -->
          <a href="/creators" class="flex items-center px-4 py-2 ...">
            <img src="/images/15.png" alt="" class="w-5 h-5 mr-2">
            Créer une campagne
          </a>
          <a href="/account" class="flex items-center px-4 py-2 ...">
            <img src="/images/11.png" alt="" class="w-5 h-5 mr-2">
            Mon compte
          </a>
          <a href="/logout" class="flex items-center px-4 py-2 ...">
            <img src="/images/10.png" alt="" class="w-5 h-5 mr-2">
            Déconnexion
          </a>
        </div>
      </nav>
    
      <!-- Toggle Mobile Menu Script -->
      <script>
        document.getElementById('mobile-menu-button').addEventListener('click', function () {
          const menu = document.getElementById('mobile-menu');
          menu.classList.toggle('hidden');
        });
      </script>
    </header>
    
  
