<head>
  <!-- Include Montserrat Font and Tailwind CSS -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/tailwind.css">
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
  <link href="https://assets.calendly.com/assets/external/widget.css" rel="stylesheet">
                          
  <style>
    body {
      font-family: 'Montserrat', sans-serif;
    }
  </style>
</head>
<body>
  <div
  id="particles-js"
  class="fixed inset-0 -z-10 pointer-events-none"
  ></div>

 
  <header class="top-0 z-50 relative">
    <div
    class="hidden sm:absolute sm:bottom-10 sm:right-8 sm:z-50 sm:p-2 sm:flex sm:items-center sm:space-x-2 sm:transition sm:duration-200 sm:transform sm:hover:scale-105 sm:hover:rotate-1"
  >
    <!-- Circle light: green if user is logged in, red otherwise + an animation -->
    <span
      class="inline-block w-3 h-3 rounded-full
            <% if (user) { %> bg-green-500 animate-pulse <% } else { %> bg-red-500 animate-pulse <% } %>"
    ></span>
    <!-- Text: "Connecté" or "Non connecté" -->
    <span
      class="font-semibold text-sm
            <% if (user) { %> text-green-500 <% } else { %> text-red-500 <% } %>"
    >
      <% if (user) { %>
        Connecté
      <% } else { %>
        Non connecté
      <% } %>
    </span>
  </div>

    
    
    <!-- Centered Logo & Subtitle -->
    <div class="container mx-auto px-8 py-5 flex flex-col items-center">
      <!-- Logo -->
      <a href="/">
        <img
          src="/images/leboncreateur2.png"
          alt="Company Logo"
          class="h-6 md:h-12 w-auto sm:h-8 mx-auto transform hover:scale-105 hover:rotate-1 transition duration-200"
        />
      </a>
      <img
      src="/images/prixunique2.png"
      alt="Sous-titre"
      class="mt-4 h-16 hidden md:block md:h-18 w-auto mx-auto"
    />
    </div>
  
    <!-- Desktop Navigation in top-right corner -->
    <nav class="hidden md:flex space-x-8 mt-6 absolute top-2 right-8">
      
      

      <a href="/signup-createur" class="flex transform shadow-white-glow shadow-[0_0_5px_rgba(0,0,0,0.3)] hover:scale-105 hover:rotate-1 items-center px-4 py-2 text-sm font-medium rounded-lg transition duration-200
      <% if (currentUrl === '/login') { %>
        bg-white text-black ring-2 ring-orange-500
      <% } else { %>
        text-black bg-white hover:ring-2 hover:ring-orange-500
      <% } %>">
        
        Ajouter votre profil
      <span 
        class="absolute top-1 right-1 transform translate-x-1/2 -translate-y-1/2 inline-flex w-4 h-4 bg-orange-400 border-2 border-white rounded-full">
      </span>
      </a>
      
      <a href="/login" class="flex items-center shadow-white-glow shadow-[0_0_5px_rgba(0,0,0,0.3)] transform hover:scale-105 hover:rotate-1 px-4 py-2 text-sm font-medium rounded-lg transition duration-200
            <% if (currentUrl === '/account') { %>
              bg-white text-black ring-2 ring-orange-500
            <% } else { %>
              text-black bg-white hover:ring-2 hover:ring-orange-500
            <% } %>">
        <img src="/images/11.png" alt="Mon compte" class="w-6 h-6">
      </a>
      
    </nav>
  
    <!-- Mobile Menu Button (Top-right corner) -->
<div class="md:hidden absolute top-5 right-8">
  <button id="mobile-menu-button" class="text-gray-700 hover:text-orange-500 focus:outline-none">
    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
    </svg>
  </button>
</div>

<!-- Mobile Menu -->
<nav id="mobile-menu" class="md:hidden hidden bg-white shadow-lg absolute top-16 right-0 w-full z-40">
  <div class="px-4 py-4 space-y-4">
    <!-- Menu Item 1 -->
    <a href="/signup-createur" class="flex transform shadow-white-glow shadow-[0_0_5px_rgba(0,0,0,0.3)] hover:scale-105 hover:rotate-1 items-center px-4 py-2 text-sm font-medium rounded-lg transition duration-200
    <% if (currentUrl === '/login') { %>
      bg-white text-black ring-2 ring-orange-500
    <% } else { %>
      text-black bg-white hover:ring-2 hover:ring-orange-500
    <% } %>">
      Ajouter votre profil
      <span class="absolute top-1 right-1 transform translate-x-1/2 -translate-y-1/2 inline-flex w-4 h-4 bg-orange-400 border-2 border-white rounded-full"></span>
    </a>

    <!-- Menu Item 2 -->
    <a href="/login" class="flex items-center shadow-white-glow shadow-[0_0_5px_rgba(0,0,0,0.3)] transform hover:scale-105 hover:rotate-1 px-4 py-2 text-sm font-medium rounded-lg transition duration-200
          <% if (currentUrl === '/account') { %>
            bg-white text-black ring-2 ring-orange-500
          <% } else { %>
            text-black bg-white hover:ring-2 hover:ring-orange-500
          <% } %>">
      <img src="/images/11.png" alt="Mon compte" class="w-6 h-6">Se connecter
    </a>
  </div>
</nav>

<!-- Toggle Mobile Menu Script -->
<script>
  document.getElementById('mobile-menu-button').addEventListener('click', function () {
    const menu = document.getElementById('mobile-menu');
    menu.classList.toggle('hidden');
  });
</script>
  </header>
  

