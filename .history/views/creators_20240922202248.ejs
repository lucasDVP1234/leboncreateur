<!-- views/creators.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Include your head partial or add necessary meta tags -->
    <title>Choose Creators</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1>Select Creators for Your Campaign</h1>
        <div class="filters">
            <h2>Filters</h2>

            <!-- Age Filter -->
            <label for="age-filter">Age:</label>
            <select id="age-filter">
                <option value="">All</option>
                <option value="18-25">18-25</option>
                <option value="26-35">26-35</option>
                <option value="36+">36+</option>
            </select>

            <!-- Category Filter -->
            <label for="category-filter">Category:</label>
            <select id="category-filter">
                <option value="">All</option>
                <% categories.forEach(function(category) { %>
                    <option value="<%= category %>"><%= category %></option>
                <% }); %>
            </select>

            <!-- Video Type Filter -->
            <label for="type-filter">Type of Videos:</label>
            <select id="type-filter">
                <option value="">All</option>
                <% videoTypes.forEach(function(type) { %>
                    <option value="<%= type %>"><%= type %></option>
                <% }); %>
            </select>
        </div>

        <!-- Creators Grid -->
        <!-- Inside your creators.ejs -->
<div class="creators-grid" id="creators-grid">
    <% creators.forEach(function(creator) { %>
        <div class="creator-card"
             data-age="<%= creator.age %>"
             data-category="<%= creator.category %>"
             data-video-types="<%= creator.videoTypes.join(',') %>">
            <img src="<%= creator.profileImage %>" alt="<%= creator.name %>" />
            <h3><%= creator.name %></h3>
            <p><%= creator.description %></p>
            <p>Age: <%= creator.age %></p>
            <p>Category: <%= creator.category %></p>
            <p>Types: <%= creator.videoTypes.join(', ') %></p>
            <form action="/book" method="POST">
                <input type="hidden" name="creatorId" value="<%= creator._id %>" />
                <input type="datetime-local" name="schedule" required />
                <button type="submit">Book</button>
            </form>
        </div>
    <% }); %>
</div>

    </div>

    <!-- Include the JavaScript file -->
    <script src="/js/creators.js"></script>
</body>
</html>
